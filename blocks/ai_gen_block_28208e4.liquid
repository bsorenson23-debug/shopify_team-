{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
 
  .ai-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.hero_height }}px;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .ai-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #1a1a1a;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 600px;
    max-height: 600px;
    opacity: 0.3;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #999;
    text-align: center;
    pointer-events: none;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-hero-content-wrapper-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: {{ block.settings.content_max_width }}px;
    padding-left: {{ block.settings.content_padding_left }}px;
    padding-right: {{ block.settings.content_padding_right }}px;
    padding-top: {{ block.settings.content_padding_vertical }}px;
    padding-bottom: {{ block.settings.content_padding_vertical }}px;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_spacing }}px;
    {% if block.settings.text_alignment == 'left' %}
      align-items: flex-start;
      text-align: left;
    {% elsif block.settings.text_alignment == 'center' %}
      align-items: center;
      text-align: center;
    {% else %}
      align-items: flex-end;
      text-align: right;
    {% endif %}
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ block.settings.heading_color }};
    font-weight: {{ block.settings.heading_weight }};
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.5;
    color: {{ block.settings.subheading_color }};
  }

  .ai-hero-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    max-width: {{ block.settings.text_max_width }}px;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.button_spacing }}px;
    flex-wrap: wrap;
    {% if block.settings.text_alignment == 'left' %}
      justify-content: flex-start;
    {% elsif block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% else %}
      justify-content: flex-end;
    {% endif %}
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    font-size: {{ block.settings.button_text_size }}px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .ai-hero-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_text_color }};
    border-color: {{ block.settings.primary_button_bg }};
  }

  .ai-hero-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg }};
    color: {{ block.settings.primary_button_hover_text }};
    border-color: {{ block.settings.primary_button_hover_bg }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.secondary_button_bg }};
    color: {{ block.settings.secondary_button_text_color }};
    border-color: {{ block.settings.secondary_button_border }};
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_bg }};
    color: {{ block.settings.secondary_button_hover_text }};
    border-color: {{ block.settings.secondary_button_hover_border }};
  }

  @media screen and (max-width: 749px) {
