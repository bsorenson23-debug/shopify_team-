{% doc %}
  @prompt
    Create a hero section block for LT316 that includes customizable settings for: background image, heading text, subheading text, button text and link, text alignment, text color, overlay opacity, and section height. The block should be fully editable through the theme editor menu options without requiring code changes. looks like what i currently have displayed.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.section_height_desktop }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .ai-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #303441;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 600px;
    max-height: 600px;
    opacity: 0.3;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 24px;
    font-size: 14px;
    color: #ffffff;
    text-align: center;
    pointer-events: none;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 4px;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    max-width: {{ block.settings.content_max_width }}px;
    padding: 40px 20px;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    margin: 0 0 20px;
    line-height: 1.2;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 30px;
    line-height: 1.5;
    color: {{ block.settings.text_color }};
    opacity: 0.9;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 16px 40px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_background_color }};
  }

  .ai-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_background_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 749px) {
    .ai-hero-section-{{ ai_gen_id }} {
      height: {{ block.settings.section_height_mobile }}px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-hero-content-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      padding: 12px 30px;
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        srcset="{{ block.settings.background_image | image_url: width: 600 }} 600w,
                {{ block.settings.background_image | image_url: width: 1200 }} 1200w,
                {{ block.settings.background_image | image_url: width: 2000 }} 2000w"
        sizes="100vw"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-hero-background-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-hero-empty-state-{{ ai_gen_id }}">
          Add a background image to get started
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <p class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <a
        href="{{ block.settings.button_link }}"
        class="ai-hero-button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero section",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 30
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to LT316"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading size",
      "min": 24,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our latest collection"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "label": "Subheading size",
      "min": 12,
      "max": 48,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "label": "Content max width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "default": 800
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "range",
      "id": "button_font_size",
      "label": "Button font size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "label": "Button border radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "default": 4
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button background",
      "default": "#b500b5"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_background_color",
      "label": "Button hover background",
      "default": "#a629af"
    },
    {
      "type": "color",
      "id": "button_hover_text_color",
      "label": "Button hover text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Section height"
    },
    {
      "type": "range",
      "id": "section_height_desktop",
      "label": "Desktop height",
      "min": 300,
      "max": 900,
      "step": 50,
      "unit": "px",
      "default": 600
    },
    {
      "type": "range",
      "id": "section_height_mobile",
      "label": "Mobile height",
      "min": 200,
      "max": 700,
      "step": 50,
      "unit": "px",
      "default": 400
    }
  ],
  "presets": [
    {
      "name": "Hero section"
    }
  ]
}
{% endschema %}
