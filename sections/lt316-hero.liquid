{% comment %}
  Laser Things 316 - Responsive Hero Banner
{% endcomment %}

<section
  class="lt316-hero lt316-hero--{{ section.id }}"
  {% if section.settings.fit_mode == 'contain' %}data-fit="contain"{% endif %}
  style="
    --hero-width: {{ section.settings.hero_width | default: '300%' }};
    --hero-height: {{ section.settings.hero_height | default: 'clamp(280px, 45vh, 640px)' }};
    --hero-max-width: {{ section.settings.hero_max_width | default: '1200px' }};
    --lt316-primary-bg: {{ section.settings.primary_button_bg }};
    --lt316-primary-text: {{ section.settings.primary_button_text }};
    --lt316-primary-hover-bg: {{ section.settings.primary_button_hover_bg }};
    --lt316-primary-hover-text: {{ section.settings.primary_button_hover_text }};
    --lt316-secondary-bg: {{ section.settings.secondary_button_bg }};
    --lt316-secondary-text: {{ section.settings.secondary_button_text }};
    --lt316-secondary-border: {{ section.settings.secondary_button_border }};
    --lt316-secondary-hover-bg: {{ section.settings.secondary_button_hover_bg }};
    --lt316-secondary-hover-text: {{ section.settings.secondary_button_hover_text }};
    --lt316-secondary-hover-border: {{ section.settings.secondary_button_hover_border }};
  "
>
  <div class="lt316-hero__banner" role="region" aria-label="Hero banner">
    {% if section.settings.image != blank %}
      {{
        section.settings.image
        | image_url: width: 2200
        | image_tag: loading: 'lazy', class: 'lt316-hero__img', alt: section.settings.image_alt | escape
      }}
    {% else %}
      <div class="lt316-hero__placeholder" role="img" aria-label="No hero image selected">
        <p>Add a hero image in this section’s settings.</p>
      </div>
    {% endif %}

    <div class="lt316-hero__overlay" aria-hidden="true"></div>

    <div class="lt316-hero__content-wrap page-width">
      <header class="lt316-hero__content">
        {% if section.settings.kicker != blank %}
          <p class="lt316-hero__kicker">{{ section.settings.kicker }}</p>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h2 class="lt316-hero__heading">{{ section.settings.heading }}</h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="lt316-hero__subheading">{{ section.settings.subheading }}</p>
        {% endif %}

        <div class="lt316-hero__cta">
          {% if section.settings.primary_label != blank and section.settings.primary_link != blank %}
            <a class="lt316-btn lt316-btn--primary" href="{{ section.settings.primary_link }}">
              {{ section.settings.primary_label }}
            </a>
          {% endif %}

          {% if section.settings.secondary_label != blank and section.settings.secondary_link != blank %}
            <a class="lt316-btn lt316-btn--secondary" href="{{ section.settings.secondary_link }}">
              {{ section.settings.secondary_label }}
            </a>
          {% endif %}
        </div>
      </header>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "LT316 - Hero",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker (small text above headline)",
      "default": "Laser Things 316"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Headline",
      "default": "Precision Jigs & Laser-Ready Tools That Just Work"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheadline",
      "default": "Dial in your workflow with purpose-built jigs, hubs, and accessories—designed for repeatable results."
    },
    {
      "type": "text",
      "id": "hero_width",
      "label": "Hero width (CSS value)",
      "default": "100%"
    },
    {
      "type": "text",
      "id": "hero_height",
      "label": "Hero height (CSS value)",
      "default": "clamp(280px, 45vh, 640px)"
    },
    {
      "type": "text",
      "id": "hero_max_width",
      "label": "Hero max width (CSS value)",
      "default": "1200px"
    },
    {
      "type": "select",
      "id": "fit_mode",
      "label": "Image fit mode",
      "default": "cover",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        }
      ]
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "Primary button label",
      "default": "Shop Best Sellers"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Primary button link"
    },
    {
      "type": "color",
      "id": "primary_button_bg",
      "label": "Primary button background",
      "default": "#b500b5"
    },
    {
      "type": "color",
      "id": "primary_button_text",
      "label": "Primary button text",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "primary_button_hover_bg",
      "label": "Primary button hover background",
      "default": "#9400a0"
    },
    {
      "type": "color",
      "id": "primary_button_hover_text",
      "label": "Primary button hover text",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Secondary button label",
      "default": "Browse All Jigs"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary button link"
    },
    {
      "type": "color",
      "id": "secondary_button_bg",
      "label": "Secondary button background",
      "default": "#00000000"
    },
    {
      "type": "color",
      "id": "secondary_button_text",
      "label": "Secondary button text",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "secondary_button_border",
      "label": "Secondary button border",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "secondary_button_hover_bg",
      "label": "Secondary button hover background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "secondary_button_hover_text",
      "label": "Secondary button hover text",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "secondary_button_hover_border",
      "label": "Secondary button hover border",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Hero image alt text",
      "default": "Laser Things 316 jigs and accessories"
    }
  ],
  "presets": [
    {
      "name": "LT316 - Hero"
    }
  ]
}

{% endschema %}
