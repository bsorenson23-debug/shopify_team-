{% comment %}
  Breadcrumb navigation

  Usage:
      {% render 'breadcrumb' %}
{% endcomment %}
<nav class="breadcrumb">
  <ul class="breadcrumb-wrapper">
    <li class="breadcrumb-item">
      <a href="{{ routes.root_url }}" class="link link-text">{{ 'breadcrumb.home' | t }}</a>
    </li>
    {%- case request.page_type -%}
      {%- when 'product' -%}
        {% if collection != blank %}
          <li class="breadcrumb-item">
            <a href="{{ collection.url }}" class="link link-text">{{ collection.title }}</a>
          </li>
        {% endif %}
        {% if product != blank %}
          <li class="breadcrumb-item page-current">
            <a href="#" class="link link-text">{{ product.title | truncate: 30 }}</a>
          </li>
        {%- endif -%}
      {%- when 'list-collections' -%}
        <li class="breadcrumb-item page-current">
          <a href="#" class="link link-text">{{ 'breadcrumb.collections' | t }}</a>
        </li>
      {%- when 'collection' -%}
        <li class="breadcrumb-item">
          <a href="{{ routes.collections_url }}" class="link link-text">{{ 'breadcrumb.collections' | t }}</a>
        </li>
        {% if collection != blank %}
          <li class="breadcrumb-item page-current">
            <a href="#" class="link link-text">{{ collection.title | truncate: 30 }}</a>
          </li>
        {%- endif -%}
      {%- when 'blog' -%}
        {% if blog != blank %}
          <li class="breadcrumb-item page-current">
            <a href="#" class="link link-text">{{ blog.title | truncate: 30 }}</a>
          </li>
        {%- endif -%}
      {%- when 'article' -%}
        {%- if blog != blank -%}
          <li class="breadcrumb-item">
            <a href="{{ blog.url }}" class="link link-text">
              {{- blog.title | truncate: 30 -}}
            </a>
          </li>
        {%- endif -%}
      {%- when 'customers/login' -%}
        <li class="breadcrumb-item page-current">
          <a href="#" class="link link-text">{{ 'breadcrumb.account.login' | t }}</a>
        </li>
      {%- when 'customers/register' -%}
        <li class="breadcrumb-item page-current">
          <a href="#" class="link link-text">{{ 'breadcrumb.account.register' | t }}</a>
        </li>
      {%- when 'customers/account' -%}
        <li class="breadcrumb-item page-current">
          <a href="#" class="link link-text">{{ 'breadcrumb.account.account' | t }}</a>
        </li>
      {%- when 'customers/order' -%}
        <li class="breadcrumb-item">
          <a href="{{ routes.account_url }}" class="link link-text">{{ 'breadcrumb.account.account' | t }}</a>
        </li>
        <li class="breadcrumb-item page-current">
          <a href="#" class="link link-text">{{ 'breadcrumb.account.order' | t }}</a>
        </li>
      {%- when 'customers/address' -%}
        <li class="breadcrumb-item">
          <a href="{{ routes.account_url }}" class="link link-text">{{ 'breadcrumb.account.account' | t }}</a>
        </li>
        <li class="breadcrumb-item page-current">
          <a href="#" class="link link-text">{{ 'breadcrumb.account.addresses' | t }}</a>
        </li>
      {%- when 'cart' -%}
        <li class="breadcrumb-item page-current">
          <a href="#" class="link link-text">{{ 'breadcrumb.cart' | t }}</a>
        </li>
      {%- when 'search' -%}
        <li class="breadcrumb-item page-current">
          <a href="#" class="link link-text">{{ 'breadcrumb.search' | t }}</a>
        </li>
      {%- when 'page' -%}
        {%- if page != blank -%}
          <li class="breadcrumb-item page-current">
            <a href="#" class="link link-text">{{ page.title | truncate: 30 }}</a>
          </li>
        {%- endif -%}
      {%- else -%}
        <li class="breadcrumb-item page-current">
          <a href="#" class="link link-text">{{ request.page_type | truncate: 30 }}</a>
        </li>
    {% endcase %}
  </ul>
</nav>
